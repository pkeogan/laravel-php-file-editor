{
    "name": "pkeogan/php-file-editor",
    "type": "package",
    "description": "Programatically edit PHP and Laravel files.",
    "keywords": [
        "php",
        "laravel",
        "ast",
        "abstract syntax tree",
        "php-parser"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Peter Keogan",
            "email": "peter@comet.software"
        }
    ],
    "require": {
        "doctrine/dbal": "^2.9 || ^3.0",
        "nikic/php-parser": "^4.11"
    },
    "require-dev": {
        "laravel/laravel": "^6.0 || ^7.0 || ^8.0",
        "orchestra/testbench": "^4.0 || ^5.0 || ^6.0",
        "phpunit/phpunit": "^8.0 || ^9.5"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "aliases": {
                "LaravelFile": "Pkeogan\\Facades\\LaravelFile",
                "PHPFile": "Pkeogan\\Facades\\PHPFile"
            },
            "dont-discover": [],
            "providers": [
                "Pkeogan\\ServiceProvider"
            ]
        }
    },
    "autoload": {
        "psr-4": {
            "Pkeogan\\": "src/",
            "Pkeogan\\Tests\\": "tests/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
